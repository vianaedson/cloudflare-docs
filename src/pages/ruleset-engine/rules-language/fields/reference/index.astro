---
import { getEntry } from "astro:content";
import StarlightPage from "@astrojs/starlight/components/StarlightPage.astro";
import FieldCatalog from "~/components/FieldCatalog.tsx";

const fieldData = await getEntry("fields", "index");
const fields = fieldData.data.entries;
---

<StarlightPage
	frontmatter={{ title: "Fields reference", tableOfContents: false }}
>
	<FieldCatalog fields={fields} client:load />
</StarlightPage>

<style>
	:root {
		--sl-content-width: 1350px !important;
	}
</style>
